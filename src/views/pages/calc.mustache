<html>
<head>
    <title>Página Calculadora Simples</title>
    <link rel="stylesheet" href="css/calc.css">
</head>

<body>
    <div class="header">
        <img src="images/calculadora.png" class='slogan'><h3>CALCULADORA</h3>
        <a href="/">CONTROLE DE CAIXA</a>
    </div>
    
    
    <input type='number' placeholder="Digite algum número" id="num1">
    <input type="number" placeholder="Digite algum número" id="num2">
    <button id="add">SOMAR</button>
    <button id="sub">SUBTRAIR</button>
    <button id="division">DIVIDIR</button>
    <button id="multi">MULTIPLICAR</button>
    <button id="percent">PORCENTAGEM</button>

    <hr>

    <div id="result"> 
        
    </div>






    <script>
        let num1 = document.getElementById('num1') 
let num2 = document.getElementById('num2') 
let sum = document.getElementById('add')
let sub = document.getElementById('sub') 
let div = document.getElementById('division')
let multiplication = document.getElementById('multi')
let percent = document.getElementById('percent')
let result = document.getElementById('result');

function add (n1, n2){
    return n1 + n2;
}

function subtract (n1,n2){
    return n1 - n2;
}

function divide (n1, n2){
    return n1 / n2;
}

function multi (n1,n2){
    return n1 * n2;
}

function percents (n1,n2){
    return (n1/100) * n2;
}




sum.addEventListener('click', () => {
    result.innerHTML = add(+num1.value, +num2.value);
})

sub.addEventListener('click', () => {
    result.innerHTML = subtract(+num1.value, +num2.value);
})

div.addEventListener('click', () => {
    result.innerHTML = divide(+num1.value, +num2.value);
})

multiplication.addEventListener('click', () => {
    result.innerHTML = multi(+num1.value, +num2.value);
})

percent.addEventListener('click', () => {
    result.innerHTML = percents (+num1.value, +num2.value)
})
     </script>
</body>